{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open qt designer",
            "type": "shell",
            "command": "pyside6-designer"
        },
        {
            "label": "convert rsc to py",
            "type": "shell",
            "command": "pyside6-rcc ${workspaceFolder}/${fileBasename} -o ${workspaceFolder}/${fileBasenameNoExtension}.py",
        },
        {
            "label": "convert ui to py",
            "type": "shell",
            "command": "pyside6-uic ${workspaceFolder}/${fileBasename} -o ${workspaceFolder}/${fileBasenameNoExtension}.py",
        }
    ]
}